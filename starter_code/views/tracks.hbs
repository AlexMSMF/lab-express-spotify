<h1>TRACKS</h1>

<div class="container" style="background-color: #1db954;">
    <div class="row">

        {{#each tracks}}
        <div class="col">
            <figure>

                <p>{{this.track_number}}</p>
                <figcaption>{{this.name}}</figcaption>
                <br>
                <audio controls src="{{this.preview_url}}">
                    Your browser does not support the
                    <code>audio</code> element.
                </audio>
            </figure>
        </div>
        {{/each}}

    </div>
</div>